<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Sign up"
    android:layout_margin="30dp"
    android:padding="15dp">

</TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:id="@+id/imageView2"
            android:layout_margin="20dp"
            android:background="#0000ff"
          android:layout_weight="1"

            app:srcCompat="@mipmap/facebook"/>

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:background="#74D7FC"
            android:layout_weight="1"

                app:srcCompat="@mipmap/twitter">
            </ImageView>


    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="or sign up with email"
        android:layout_margin="20dp"
        android:padding="10dp">

    </TextView>




        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First name"
            android:layout_margin="5dp"
            android:padding="15dp"


            android:ems="10"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Second Name"
        android:layout_margin="5dp"
        android:padding="15dp"

        android:ems="10"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Your Email"
        android:layout_margin="5dp"
        android:padding="15dp"

    android:ems="10"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_margin="5dp"
        android:padding="15dp"

        android:ems="10"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sign Up"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:background="#5CFFFF"

        android:ems="10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="By signing up, u agreed with our terms of Service and Privacy Policy"
        android:layout_margin="5dp"
        android:padding="5dp"

        android:ems="10">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Already Have an Account?"
            android:padding="15dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Login">

        </Button>

    </LinearLayout>

</LinearLayout>








